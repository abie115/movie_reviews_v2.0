<%= link_to '<< Back', movie_path(@movie['id']), :class=>"btn btn-success" %>
<br></br>
<p>
  <strong>Title:</strong>
  <%= @review.title %>
</p>

<p>
  <strong>Movie:</strong>
  <%= @movie['title'] %>
</p>

<p>
  <strong>User:</strong>
  <%= @review.user.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @review.description %>
</p>



<% if logged_in? %>
  <% if @review.user.name == current_user.name %>
    <%= link_to 'Edit', edit_review_path(@review), :class =>"btn btn-warning btn-sm"%>
  <% end %>
<% end %>
  <%= link_to 'Add comment',  new_comment_path(:review => @review.id), :class=>"btn btn-primary btn-sm" %>


<% if @review.comments.any? %>
      <h2>Comments (<%= @review.comments.count %>)</h2>
      <ol class="comments">
        <%= render @review.comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>